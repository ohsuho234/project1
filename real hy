  <!-- ================== PART 27 ~ 30: script ================== -->
  <script>
    // PART 27: showSection í•¨ìˆ˜ ë¼ˆëŒ€
    function showSection(which) {
      // PART 28: DOM ìš”ì†Œ ê°€ì ¸ì˜¤ê¸°
      const home        = document.getElementById('home-section');
      const job         = document.getElementById('job-section');
      const apply       = document.getElementById('apply-section');
      const cert        = document.getElementById('cert-section');
      const participate = document.getElementById('participate-section');
      const scholar     = document.getElementById('scholar-section');
      const study       = document.getElementById('study-section');

      // PART 29: ì„¹ì…˜ ë³´ì´ê¸°/ìˆ¨ê¸°ê¸° ë¡œì§
      home.style.display        = (which === 'home')        ? 'block' : 'none';
      job.style.display         = (which === 'job')         ? 'block' : 'none';
      apply.style.display       = (which === 'apply')       ? 'block' : 'none';
      cert.style.display        = (which === 'cert')        ? 'block' : 'none';
      participate.style.display = (which === 'participate') ? 'block' : 'none';
      scholar.style.display     = (which === 'scholar')     ? 'block' : 'none';
      study.style.display       = (which === 'study')       ? 'block' : 'none';

      // PART 30: ë„¤ë¹„ê²Œì´ì…˜ active í† ê¸€
      document.getElementById('nav-home').classList.toggle('active', which === 'home');
      document.getElementById('nav-job').classList.toggle('active', which === 'job');
      document.getElementById('nav-apply').classList.toggle('active', which === 'apply');
      document.getElementById('nav-cert').classList.toggle('active', which === 'cert');
      document.getElementById('nav-participate').classList.toggle('active', which === 'participate');
    }
      document.addEventListener('DOMContentLoaded') 
  </script>
